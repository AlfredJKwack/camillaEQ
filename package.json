{
  "name": "camillaeq",
  "version": "0.1.0",
  "private": true,
  "description": "CamillaDSP graphical equalizer interface",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm-run-all build:client build:server copy:client",
    "build:server": "npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "copy:client": "mkdir -p server/dist/client && cp -r client/dist/* server/dist/client/",
    "test": "npm-run-all test:server test:client",
    "test:server": "npm run test --workspace=server",
    "test:client": "npm run test --workspace=client",
    "start": "NODE_ENV=production npm run start --workspace=server",
    "start:prod": "npm run build && npm run start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
