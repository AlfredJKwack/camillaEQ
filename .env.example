# Server Configuration
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# CamillaDSP WebSocket URLs
CAMILLA_CONTROL_WS_URL=ws://localhost:3146
CAMILLA_SPECTRUM_WS_URL=ws://localhost:6413

# Logging (levels: error, warn, info, debug)
LOG_LEVEL=info

# Config Storage
CONFIG_DIR=./data

# Read-Only Mode
# When true, server refuses any write operations (PUT/POST/PATCH/DELETE to /api/*).
# CamillaDSP control from browser remains fully functional.
# Use this when CamillaEQ is publicly exposed but should not accept persistence changes.
SERVER_READ_ONLY=false
